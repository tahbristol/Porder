<div class="container">
  <div id="profile-card" class="row">
    <div class="col-sm-6">
      <h2><%=@user.name%></h2><br>
      <p><%=@user.email%></p>
    </div>
    <div class="col-sm-6">
      <form action="/requests/<%=@user.slug%>/show" method='get'>
        <button class='btn-primary' type="submit" value="View Requests">View Requests</button>

      </form><br>

      <form action="/requests/new" method='get'>
        <button class='btn-primary' type="submit" value="New Requests">New Request</button>

      </form><br>

      <form action="/logout" method='post'>
        <button class='btn-primary' type="submit" value="logout">Logout</button>

      </form>
    </div>
  </div>
</div>
